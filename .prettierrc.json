{
  "$schema": "https://json.schemastore.org/prettierrc",
  "plugins": [
    "@ianvs/prettier-plugin-sort-imports",
    "prettier-plugin-organize-attributes"
  ],
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "printWidth": 100,
  "attributeSort": "ASC",
  "attributeGroups": [
    "^class$",
    "^(id|name)$",
    "^v-",
    "^:",
    "$DEFAULT",
    "^data-",
    "^@",
    "^aria-"
  ],
  "importOrder": [
    "<TYPES>^(node:)",
    "<TYPES>",
    "<TYPES>^[@/]",
    "<BUILTIN_MODULES>",
    "<THIRD_PARTY_MODULES>",
    "^[@/]"
  ]
}